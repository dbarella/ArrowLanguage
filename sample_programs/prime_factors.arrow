prime_factors(const n, ref results, const s){
    if n >= 2 {
        do/undo {
            i := 1
            from (i == 1){
                i += 1
            } until n % i == 0
        }
        yielding {
            results[s] += i
            prime_factors(n/i, &results, s + 1)
        }
    } <=>
}

main(
n := 28,
results := [0, 0, 0, 0, 0, 0, 0, 0, 0]
){
    prime_factors(n, &results, 0)
}